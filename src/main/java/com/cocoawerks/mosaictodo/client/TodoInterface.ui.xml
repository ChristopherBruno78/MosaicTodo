             xmlns:m="urn:import:com.cocoawerks.gwt.mosaic.client.ui"

>

    <ui:style src="style.css" />


    <g:VerticalPanel spacing="10">
        <g:HorizontalPanel spacing="10" verticalAlignment="middle">
